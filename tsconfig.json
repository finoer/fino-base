{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "ES5",
            "ES6",
            "ES7",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ESNext",
            "dom"
        ],
        "outDir": "./dist/",
        "allowJs": true,
        "strict": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "paths": {
       
        }
    },
    "include": [
        "src",
        "test",
        "../../packages/startup/src/*.ts"
    ],
    // "files": [

    // ],
    // typedoc
    "typedocOptions": {
        "inputFiles": [
            "src"
        ],
        "out": "docs",
        "mode": "file",
        "theme": "default"
    }
}